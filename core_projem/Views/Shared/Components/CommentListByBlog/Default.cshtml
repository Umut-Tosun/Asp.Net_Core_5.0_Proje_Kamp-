@model IEnumerable<EntityLayer.Concrete.Comment>

<div class="comment-top">
    <h4>Yorumlar</h4>
    @if (Model.Count() == 0)
    {
        <h6 style="color:red">Yorum Bulunmuyor .</h6>
    }
    else
    {
        <h6 style="color:red">Yorum Sayısı : @Model.Count().ToString()</h6>
        <br />

        @foreach (var item in Model)
        {
            <div class="media">
                <img src="~/web/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.CommentUserName</h5>
                    <p>
                        @item.CommentContent
                    </p>
                </div>
            </div>

        }
    }
</div>